<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HammerFoodApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FD3A69</item>
        <item name="colorPrimaryVariant">#33FD3A69</item>
        <item name="colorOnPrimary">#FBFBFB</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#323232</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>

        <item name="android:textSize">@dimen/title_2</item>


        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>

    <style name="RadioButtons">
        <item name="android:background">@drawable/tab_radiobutton</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableTint" tools:targetApi="m">?attr/colorPrimary</item>
        <item name="android:textColor">@drawable/radio_button_text_selector</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>